<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintBmiParent"
        android:background="#6E924A"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/layoutParentTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">
        <TextView
                android:gravity="center"
                android:textColor="#F1EFEF"
                android:padding="15sp"
                android:textSize="90sp"
                android:textStyle="bold"
                android:text="@string/title_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleHome"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutParentTitle"
            android:layout_width="match_parent"
            android:layout_height="1000sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_bias="0.0">
        <TextView
                android:textColor="#F1EFEF"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="@string/title_weight"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:id="@+id/textTitleWeight"/>
        <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/cardViewWeight"
                android:layout_width="720sp"
                android:layout_height="300sp"
                app:cardCornerRadius="60sp"
                app:cardBackgroundColor="#AEA666">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintChildCardWeight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                        android:maxLength="5"
                        android:textColor="#F1EFEF"
                        app:layout_constraintTop_toTopOf="@id/constraintChildCardWeight"
                        android:textColorHint="#ABCDC5C5"
                        android:textSize="120sp"
                        android:textStyle="bold"
                        android:hint="@string/hint_weight"
                        android:layout_width="320sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:id="@+id/editeTextWeight"
                        android:paddingBottom="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
                <TextView
                        app:layout_constraintTop_toTopOf="@id/constraintChildCardWeight"
                        app:layout_constraintStart_toEndOf="@+id/editeTextWeight"
                        android:textColor="#C3CDC5C5"
                        android:textStyle="bold"
                        android:textSize="100sp"
                        android:text="@string/unit_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewUnitWeight"
                        android:layout_marginEnd="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <TextView
                android:textColor="#F1EFEF"
                android:gravity="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="@string/title_height"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:id="@+id/textTitleHeight"/>
        <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/cardViewHeight"
                android:layout_width="720sp"
                android:layout_height="300sp"
                android:layout_margin="5sp"
                app:cardCornerRadius="60sp"
                app:cardBackgroundColor="#AEA666">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintChildCardHeight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                        android:maxLength="6"
                        android:textColor="#F1EFEF"
                        app:layout_constraintTop_toTopOf="@id/constraintChildCardHeight"
                        android:textColorHint="#ABCDC5C5"
                        android:textSize="120sp"
                        android:textStyle="bold"
                        android:hint="@string/hint_height"
                        android:layout_width="385sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:id="@+id/editeTextHeight"
                        android:paddingBottom="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
                <TextView
                        app:layout_constraintTop_toTopOf="@id/constraintChildCardHeight"
                        app:layout_constraintStart_toEndOf="@+id/editeTextHeight"
                        android:textColor="#C3CDC5C5"
                        android:textStyle="bold"
                        android:textSize="90sp"
                        android:text="@string/unit_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewUnitHeight"
                        android:layout_marginEnd="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="720sp"
                android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                    android:layout_gravity="center"
                    android:textColor="#AEA666"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/bt_bmi"
                    android:text="@string/bt_bmi"
                    android:layout_width="0sp"
                    android:layout_height="140sp"
                    android:id="@+id/buttonBmi"
                    android:layout_weight=".5"
                    android:contentDescription="@string/name_mp_application"/>
            <TextView
                    android:gravity="center"
                    android:textColor="#F1EFEF"
                    android:textStyle="bold"
                    android:textSize="50sp"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewResultBmi"
                    android:layout_weight="1"/>
            <TextView
                    android:gravity="center"
                    android:textColor="#F1EFEF"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewResultMessage"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>