<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#6E924A"
        android:id="@+id/constraintPercentParent"
        android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/layoutParentTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">
            <TextView
                    android:gravity="center"
                    android:textColor="#F1EFEF"
                    android:padding="15sp"
                    android:textSize="90sp"
                    android:textStyle="bold"
                    android:text="@string/title_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleHome"/>
        </LinearLayout>
    <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#AEA666"
            app:cardCornerRadius="25sp"
            android:id="@+id/cardViewDetailsPercentage"
            app:layout_constraintTop_toBottomOf="@+id/layoutParentTitle"
            android:layout_width="740sp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintCardViewPercentageChild"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:transitionName="@string/name_mp_application"
                    android:src="@mipmap/programmer"
                    android:padding="10sp"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:id="@+id/imageIcon"
                    app:layout_constraintTop_toTopOf="@+id/constraintCardViewPercentageChild"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"/>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="490dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toEndOf="@+id/imageIcon"
                    app:layout_constraintTop_toTopOf="@+id/constraintCardViewPercentageChild"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintEnd_toEndOf="parent">
                <TextView
                        android:layout_margin="5sp"
                        android:textStyle="bold"
                        android:textColor="#C6221E1E"
                        android:textSize="30sp"
                        android:text="@string/title_info_tell_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textFirst"/>
                <TextView
                        android:layout_margin="5sp"
                        android:textStyle="bold"
                        android:textColor="#C6221E1E"
                        android:textSize="20sp"
                        android:text="@string/text_formula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textSecond"/>
                <TextView
                        android:layout_margin="5sp"
                        android:textStyle="bold"
                        android:textColor="#C6221E1E"
                        android:textSize="20sp"
                        android:text="@string/text_example"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textThirth"/>
                <TextView
                        android:gravity="start"
                        android:textStyle="bold"
                        android:textColor="#C64E4646"
                        android:textSize="23sp"
                        android:text="@string/text_solution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textFourth"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_marginEnd="20dp"
            app:cardElevation="0dp"
            android:backgroundTint="#00424242"
            app:cardCornerRadius="25sp"
            android:id="@+id/cardViewInputPercentage"
            app:layout_constraintTop_toBottomOf="@+id/cardViewDetailsPercentage"
            android:layout_width="800sp"
            android:layout_height="550sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintCardViewInputPercentage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:gravity="center"
                    android:id="@+id/layoutInput"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <androidx.cardview.widget.CardView
                        android:layout_margin="20sp"
                        app:cardBackgroundColor="#AEA666"
                        app:cardCornerRadius="25sp"
                        android:layout_width="350sp"
                        android:layout_height="300sp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintChildCardInputA"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                app:layout_constraintTop_toBottomOf="@id/editeTextInputA"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="25sp"
                                android:text="@string/text_descript_a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        <EditText
                                android:layout_margin="20sp"
                                android:maxLength="5"
                                android:textColor="#F1EFEF"
                                app:layout_constraintTop_toTopOf="@id/constraintChildCardInputA"
                                android:textColorHint="#ABCDC5C5"
                                android:textSize="140sp"
                                android:textStyle="bold"
                                android:hint="@string/hit_a"
                                android:layout_width="285sp"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:id="@+id/editeTextInputA"
                                android:paddingBottom="10sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginBottom="20dp"
                                app:layout_constraintHorizontal_bias="0.506"
                                app:layout_constraintVertical_bias="0.16"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_margin="20sp"
                        app:cardBackgroundColor="#AEA666"
                        app:cardCornerRadius="25sp"
                        android:layout_width="350sp"
                        android:layout_height="300sp">
                    <androidx.constraintlayout.widget.ConstraintLayout

                            android:id="@+id/constraintChildCardInputB"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                app:layout_constraintTop_toBottomOf="@id/editeTextInputB"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="25sp"
                                android:text="@string/text_descript_b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        <EditText
                                android:layout_margin="20sp"
                                android:maxLength="5"
                                android:textColor="#F1EFEF"
                                app:layout_constraintTop_toTopOf="@id/constraintChildCardInputB"
                                android:textColorHint="#ABCDC5C5"
                                android:textSize="140sp"
                                android:textStyle="bold"
                                android:hint="@string/hit_b"
                                android:layout_width="285sp"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:id="@+id/editeTextInputB"
                                android:paddingBottom="10sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginBottom="20dp"
                                app:layout_constraintHorizontal_bias="0.506"
                                app:layout_constraintVertical_bias="0.16"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/layoutInput"
                    android:orientation="horizontal"
                    android:layout_width="750sp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp">
                <androidx.appcompat.widget.AppCompatButton
                        android:layout_gravity="center"
                        android:textColor="#AEA666"
                        android:textStyle="bold"
                        android:textSize="35sp"
                        android:layout_margin="20sp"
                        android:background="@drawable/bt_percent"
                        android:text="@string/bt_bmi"
                        android:layout_width="0pt"
                        android:layout_height="150sp"
                        android:id="@+id/buttonBmi"
                        android:layout_weight=".3"
                        android:contentDescription="@string/name_mp_application"/>
                <TextView
                        android:gravity="center"
                        android:textColor="#F1EFEF"
                        android:textStyle="bold"
                        android:textSize="50sp"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewResultPercentage"
                        android:layout_weight="1"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>