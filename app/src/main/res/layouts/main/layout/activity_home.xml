<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/constraintHomeParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6E924A"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:id="@+id/layoutParentTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">
        <TextView
                android:gravity="center"
                android:textColor="#F1EFEF"
                android:padding="15sp"
                android:textSize="60sp"
                android:textStyle="bold"
                android:text="@string/title_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleHome"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutParentButtonImage"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/layoutParentTitle"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1100sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <ImageButton
                android:elevation="10dp"
                android:id="@+id/btBMI"
                android:layout_margin="10sp"
                android:background="@drawable/bt_home"
                android:layout_width="720sp"
                android:layout_height="330sp"
                android:src="@mipmap/weightscale"
                android:padding="35sp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/name_mp_application"
                app:tint="#475E30"/>

        <ImageButton
                android:elevation="10dp"
                android:id="@+id/btPercentage"
                android:layout_margin="10sp"
                android:background="@drawable/bt_home"
                android:layout_width="720sp"
                android:layout_height="330sp"
                android:src="@mipmap/percentage"
                android:padding="35sp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/name_mp_application"
                app:tint="#3C5029"/>

        <ImageButton
                android:elevation="10dp"
                android:id="@+id/btMultiplyTable"
                android:layout_margin="10sp"
                android:background="@drawable/bt_home"
                android:layout_width="720sp"
                android:layout_height="330sp"
                android:src="@mipmap/math"
                android:scaleType="fitCenter"
                android:contentDescription="@string/name_mp_application"
                app:tint="#475E30"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>